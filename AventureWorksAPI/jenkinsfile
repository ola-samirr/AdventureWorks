pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        script {
          bat 'dotnet build AventureWorksAPI/jenkinsfile'
        }
      }
    }
    stage('Docker Build') {
      steps {
        script {
          bat 'docker build -t adventureWorksContainer .'
        }
      }
    }
    stage('Deploy to Staging') {
      steps {
        script {
          bat 'docker-compose up --build -d'
        }
      }
    }
  }
}
